{% extends "base.njk" %}

{% block titulo %}Login{% endblock %}

{% block contenido %}

{% if error %}
    <div class="alert alert-danger col-8 mx-auto">
        <i class="fa fa-exclamation-circle" aria-hidden="true"></i> {{ error }}
    </div>
{% endif %}

<form action="/auth/login" method="post" class="row g-3 d-grid gap-2 col-8 mx-auto">
    <div class="form-floating">
        <input type="login" class="form-control" id="login" name="login" placeholder="Usuario...">
        <label for="login">Usuario</label>
    </div>
    <div class="form-floating">
        <input type="password" class="form-control" id="password" name="password" placeholder="Contraseña...">
        <label for="password">Contraseña</label>
    </div>
    <div class="d-grid gap-2 col-3 mx-auto">
        <button type="submit" class="btn btn-primary">Iniciar sesión <i class="fa fa-sign-in" aria-hidden="true"></i></button>
    </div>
</form>

{% endblock %}